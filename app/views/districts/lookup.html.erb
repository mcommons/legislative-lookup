<h2>Legislative Lookup</h2>

<div id="geo-box">
  <form id="address_form"> <!-- Handled by js. Not submitted. -->
    <span id="address_span">
      <p>
        <label>Address</label>
        <input type="text" id="address" name="address"/>
      </p>
      <input type="submit" value="Lookup">
      <input type="button" id="clear" value="Clear">
    </span>
  </form>
  <% form_remote_tag :html => { :id => "lat_lng_form" } do %>
      <span id="lat_lng" style="display:none;">
        <p>
          <label>Latitude</label>
          <%= text_field_tag "lat", params[:lat] %>
        </p>
        <p>
          <label>Longitude</label>
          <%= text_field_tag "lng", params[:lng] %>
        </p>
      </span>
			<span id="icons"></span>
  <% end %>
</div>

  <%= @map.div %>

  <div id="notice" style="display:none;"></div>


